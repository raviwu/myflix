= javascript_include_tag 'payment'

%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_for @user, html: {class: 'form-horizontal', id: 'payment-form'} do |f|
        %header
          %h1 Register
          = f.hidden_field :invitation_token, value:  @invitation.token
          = render 'shared/error_messages', obj: @user
        %fieldset
          .form-group
            = f.label :email, "Email Address", class: 'control-label col-sm-2'
            .col-sm-6
              = f.email_field :email, value: @invitation.recipient_email, class: 'form-control'
          .form-group
            = f.label :password, "Password", class: 'control-label col-sm-2'
            .col-sm-6
              = f.password_field :password, class: 'form-control'
          .form-group
            = f.label :fullname, "Full Name", class: 'control-label col-sm-2'
            .col-sm-6
              = f.text_field :fullname, value: @invitation.recipient_fullname, class: 'form-control'
        %fieldset.credit_card
          %span.payment-errors
          .form-group
            = label_tag 'credit_card_number', 'Credit Card Number', class: 'control-label col-sm-2'
            .col-sm-6
              = text_field_tag('credit_card_number', nil, class: 'form-control', data: {stripe: 'number'})
          .form-group
            = label_tag 'security_code', 'Security Code', class: 'control-label col-sm-2'
            .col-sm-6
              = text_field_tag('security_code', nil, class: 'form-control', data: {stripe: 'cvc'})
          .form-group
            %label.control-label.col-sm-2 Expiration
            .col-sm-3
              = select_month(Date.today, {add_month_numbers: true},  class: 'form-control', id: 'exp_month', data: {stripe: 'exp-month'})
            .col-sm-2
              = select_year(Date.today.year, {start_year: Date.today.year, end_year: Date.today.year + 10}, id: 'exp_year', class: 'form-control', data: {stripe: 'exp-year'})
        %fieldset.actions.control-group.col-sm-offset-2
          .controls
            = f.submit 'Sign Up', class: "btn btn-default"
